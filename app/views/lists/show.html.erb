
<div class="container-md m-3 p-3">
  <%= render "/components/banner_movie", list: @list %>
      <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class:"btn btn-primary btn-sm m-3" %>

  <div class="row justify-content-start">
    <div class="col-4 m-3 p-6">
        <% @movies.each do |m| %>
          <%= render "/components/card", list: @list, movie: m, bookmarks: @bookmarks%>
        <% end %>
    </div>
  </div>
</div>
