
<div class="container-md m-3 p-3">
  <h1 class="display-6"><%= @list.name %></h1>
  <p>Look at the movies and bookmarks</p>

  <div class="row">
    <div class="col-md-4 shadow-lg m-3 p-3">
      <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class:"btn btn-primary btn-sm m-3" %>
      <ul class="list-group">
        <% @movies.each do |m| %>
          <li class="list-group-item"> <%= m.title %></li>
        <% end %>
      </ul>

      <%= link_to "Go back to movies", lists_path, class: "btn btn-secondary btn-sm m-3" %>
    </div>

    <div class="col-md-4 shadow-lg m-3 p-3">
      <% @bookmarks.each do |b| %>
      <p class="border p-3"> <%= b.comment %> </p>
      <%= link_to "Destroy bookmark", bookmark_path(b), class: "btn btn-warning btn-sm", data: { turbo_method: :delete} %>
      <% end %>
    </div>
  </div>
</div>
